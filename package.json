{
  "name": "root",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "example",
      "website"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Hyperting/chakra-admin.git"
  },
  "dependencies": {
    "@apollo/client": "^3.5.7",
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.0",
    "@babel/preset-typescript": "^7.16.0",
    "@chakra-ui/icons": "^1.1.1",
    "@chakra-ui/react": "^1.6.7",
    "@chakra-ui/utils": "^1.9.1",
    "@emotion/react": "^11.7.1",
    "@emotion/styled": "^11.3.0",
    "@rollup/plugin-commonjs": "^19.0.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@storybook/addon-actions": "^6.3.8",
    "@storybook/addon-essentials": "^6.3.8",
    "@storybook/addon-links": "^6.3.8",
    "@storybook/react": "^6.3.8",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@types/enzyme": "^3.10.10",
    "@types/jest": "^27.0.2",
    "@types/react": "^17.0.14",
    "@typescript-eslint/eslint-plugin": "4.12.0",
    "@typescript-eslint/parser": "4.12.0",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.6.5",
    "babel-eslint": "10.1.0",
    "babel-jest": "^26.6.0",
    "babel-loader": "^8.1.0",
    "cpy-cli": "^3.1.1",
    "enzyme": "^3.11.0",
    "enzyme-to-json": "^3.6.2",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-airbnb-typescript": "12.0.0",
    "eslint-config-prettier": "7.1.0",
    "eslint-config-react-app": "6.0.0",
    "eslint-import-resolver-typescript": "2.3.0",
    "eslint-loader": "4.0.2",
    "eslint-plugin-flowtype": "5.2.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-json": "^2.1.2",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-prettier": "3.3.1",
    "eslint-plugin-react": "7.22.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "framer-motion": "^4.1.17",
    "graphql": "^16.2.0",
    "jest": "^27.3.1",
    "lerna": "^4.0.0",
    "prettier": "2.2.1",
    "prettier-eslint": "12.0.0",
    "prettier-eslint-cli": "5.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-icons": "^4.3.1",
    "react-router-dom": "^6.2.1",
    "recoil": "^0.5.2",
    "release-it": "^14.11.5",
    "release-it-lerna-changelog": "^3.1.0",
    "release-it-yarn-workspaces": "^2.0.1",
    "rollup": "^2.53.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-typescript2": "^0.30.0",
    "ts-jest": "^27.1.3",
    "ts-morph": "^13.0.2",
    "ts-node": "^10.4.0",
    "ts-transformer-keys": "^0.4.3",
    "typescript": "^4.5.5"
  },
  "resolutions": {
    "**/react": "17.0.1",
    "**/react-dom": "17.0.1"
  },
  "scripts": {
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "bootstrap": "lerna bootstrap --use-workspaces",
    "clean": "lerna run clean",
    "build": "lerna run build --include-dependencies --stream --ignore example --ignore website --ignore \"packages/ca-test-utils\" && npm run copy-readme",
    "start": "lerna run --parallel start --include-dependencies --stream --ignore website --ignore example --ignore \"packages/ca-test-utils\"",
    "release": "release-it",
    "release-rc": "release-it --preRelease=rc",
    "release-dev": "release-it --preRelease=dev",
    "deploy": "yarn build && yarn release",
    "deploy-rc": "yarn build && yarn release-rc",
    "deploy-dev": "yarn build && yarn release-dev",
    "test:unit": "jest",
    "test:watch:unit": "jest --watch",
    "test:watch": "yarn test:watch:unit",
    "test": "yarn test:unit",
    "copy-readme": "cpy ./README.md ./packages/chakra-admin"
  },
  "release-it": {
    "plugins": {
      "release-it-yarn-workspaces": true,
      "release-it-lerna-changelog": {
        "infile": "CHANGELOG.md",
        "launchEditor": true
      }
    },
    "npm": false,
    "git": {
      "requireCleanWorkingDir": false,
      "requireBranch": "main",
      "push": false
    },
    "github": {
      "release": true
    }
  },
  "version": "0.0.1-dev.11"
}